<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/shape_rect_round">

    <ImageView
        android:id="@+id/iv_src"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_margin="10dp"
        android:layout_centerInParent="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_cloud_outline"
        android:tint="@color/moneroBlue"/>

    <TextView
        android:id="@+id/tvName"
        style="@style/MoneroText.Label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/ibOptions"
        android:layout_toRightOf="@id/iv_src"
        tools:text="My Wallet" />

    <TextView
        android:id="@+id/tvAddress"
        style="@style/MoneroText.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvName"

        android:layout_marginBottom="10dp"
        android:layout_toLeftOf="@+id/ibOptions"
        android:layout_toRightOf="@id/iv_src"
        tools:text="bxdkPJox...g3viqCuk" />

    <ImageButton
        android:id="@+id/ibOptions"
        style="?android:attr/actionOverflowButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:tint="@color/moneroBlue" />
</RelativeLayout>