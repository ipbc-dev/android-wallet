<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_margin="8dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rect_round"
        >

        <TextView
            android:id="@+id/tvName"
            style="@style/MoneroText.Label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:layout_toStartOf="@+id/ibOptions"
            tools:text="My Wallet" />

        <TextView
            android:id="@+id/tvAddress"
            style="@style/MoneroText.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvName"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="20dp"
            android:layout_toStartOf="@+id/ibOptions"
            tools:text="bxdkPJox...g3viqCuk" />

        <ImageButton
            android:id="@+id/ibOptions"
            style="?android:attr/actionOverflowButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:tint="@color/moneroBlue"
            android:layout_centerInParent="true" />
    </RelativeLayout>